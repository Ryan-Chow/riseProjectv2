<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - <%= username %></title>
    <link rel="stylesheet" href="../styles/dashboard.css">
    <link href="https://fonts.googleapis.com/css2?family=Kumbh+Sans:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>

    <!-- NAVBAR SECTION -->

    <nav class="navbar">
        <div class="navbar__container">
            <a href="/" id="navbar__logo">
                <ion-icon name="body-outline"></ion-icon>
                Volunteer League
            </a>
        </div>
    </nav>

    <!-- MAIN SECTION -->

    <div class="main">
        <div class="main-content">
            <div class="header-wrapper">
                <div class="header-title">
                    <span></span>
                    <h2>Dashboard</h2>
                </div>
                <div class="user-info">
                    <a href="/profile/<%= username %>" class="user"><%= username %></a>
                </div>
            </div>
        </div>
        <div class="card-container">
            <div class="league-join-card">
                <h3 class="main-title">Your Leagues</h3>
                <!-- ADD DYNAMIC HERE -->
                <% if (leagues && leagues.length > 0) { %>
                    <% leagues.forEach(league => { %>
                        <div class="league-item">
                            <p><strong>League Name:</strong> <%= league.league_name %></p>
                            <button class="league-link-btn"><a href="/league/<%= league.league_id %>" class="league-link">Go!</a></button>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No leagues available. Join one and it will appear here!</p>
                <% } %>
            </div>
        </div>
        <div class="card-container">
            <div class="league-join-card">
                <h3 class="main-title">Join New League</h3>
                <button id="public-league"><a href="/createLeague" id="public-league" class="button-link">Create New League</a></button>
                <button id="private-league"><a href="/joinLeague" id="private-league" class="button-link">Enter League Code</a></button>
            </div>
        </div>
       



    </div>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

</body>
</html>